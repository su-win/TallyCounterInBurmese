<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".MainActivity">

    <!-- Counter Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="70dp" />

    <!-- Counter Display -->
    <TextView
        android:id="@+id/txtDisplayCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="82sp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintBottom_toTopOf="@+id/twoButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Plus and Minus Buttons Group -->
    <LinearLayout
        android:id="@+id/twoButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplayCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        >

        <!-- Minus Button (Left) -->
        <Button
            android:id="@+id/btnDecrement"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button_background"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="41dp"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="286dp" />

        <!-- Plus Button (Right) -->
        <Button
            android:id="@+id/btnIncrement"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/rounded_button_background"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="206dp"
            tools:layout_editor_absoluteY="278dp" />
    </LinearLayout>

    <!-- Restart Button -->
    <Button
        android:id="@+id/btnRestart"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="108dp"
        android:padding="3dp"
        android:background="@drawable/rounded_button_background"
        android:text="@string/restart_button"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplayCounter" />

    <!--Exit Button-->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/rounded_button_background"
        android:text="@string/exit_button"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="11dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
